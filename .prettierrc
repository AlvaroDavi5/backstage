{
	"$schema": "https://json.schemastore.org/prettierrc",
	"trailingComma": "es5",
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"bracketSpacing": true,
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 160,
	"proseWrap": "never",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"singleQuote": false,
				"printWidth": 190
			}
		},
		{
			"files": "*.md",
			"options": {
				"printWidth": 120
			}
		},
		{
			"files": "*.yml",
			"options": {
				"printWidth": 120,
				"proseWrap": "always",
				"endOfLine": "crlf"
			}
		}
	]
}